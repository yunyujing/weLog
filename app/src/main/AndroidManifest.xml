<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzia.graduation.welog">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconfont"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zzia.graduation.ui.DetailProjectActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.DetailTaskActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.EditProjectActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.EditTaskActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.AddProjectActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.AddTaskActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.AddOverTimeActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.AddHolidayActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zzia.graduation.ui.AddClaimActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.zzia.graduation.ui.AboutMeActivity"
            android:screenOrientation="portrait"/>
        
        <activity android:name="com.zzia.graduation.ui.CollectListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.zzia.graduation.ui.OverTimeListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.zzia.graduation.ui.HolidayListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.zzia.graduation.ui.ClaimListActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
