<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overtime_list_layout_recycle_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_twelve"
    android:background="@color/bg_default">


    <TextView
        android:id="@+id/overtime_list_recycle_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待审核"
        android:textSize="@dimen/text_default"
        android:textColor="@color/titlebar_background"/>

    <TextView
        android:id="@+id/overtime_list_recycle_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2016-5-15" />

    <TextView
        android:id="@+id/overtime_list_recycle_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overtime_list_recycle_item_title"
        android:layout_marginTop="@dimen/space_four"
        android:text="加班"
        android:textColor="@color/text_ooo"
        android:textSize="@dimen/text_middle" />
</RelativeLayout>