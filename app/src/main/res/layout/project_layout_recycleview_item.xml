<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_layout_recycleview_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:gravity="center">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/project_layout_recycleview_item_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:actualImageScaleType="centerCrop"
        app:fadeDuration="300"
        app:failureImage="@mipmap/project_yanfa"
        app:failureImageScaleType="fitXY"
        app:placeholderImage="@mipmap/project_yanfa"
        app:placeholderImageScaleType="fitXY" />


    <TextView
        android:id="@+id/project_layout_recycleview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_layout_recycleview_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_five"
        android:gravity="center"
        android:text="项目名称"
        android:textColor="@color/text_333"
        android:textSize="@dimen/text_middle" />

</RelativeLayout>