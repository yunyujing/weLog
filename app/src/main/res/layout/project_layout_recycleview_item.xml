<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_layout_recycleview_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_list_driver"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/project_layout_recycleview_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/yanfa"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/project_layout_recycleview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_five"
        android:layout_marginBottom="@dimen/space_five"
        android:textColor="@color/text_333"
        android:textSize="@dimen/text_middle"
        android:text="答辩"/>

</LinearLayout>