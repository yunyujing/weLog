<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zzia.graduation.views.MyActionBar
        android:id="@+id/create_holiday_layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:titleName="加班审核" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve">

        <TextView
            android:id="@+id/create_holiday_layout_creater_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提交人："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/create_holiday_layout_createtime"
            android:layout_toRightOf="@+id/create_holiday_layout_creater_txt"
            android:text="sadfasd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="sdfs" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve">

        <TextView
            android:id="@+id/create_holiday_layout_createer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="审核人："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_checker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/create_holiday_layout_checktime"
            android:layout_toRightOf="@+id/create_holiday_layout_createer_txt"
            android:text="sdfsa"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_checktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="sdfs" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/create_holiday_layout_reason_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加班事项："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修复线上 BUG-1200"
            android:textSize="@dimen/text_middle" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-03-09"
            android:textSize="@dimen/text_middle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-03-09"
            android:textSize="@dimen/text_middle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_twelve">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核状态："
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/create_holiday_layout_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/titlebar_background"/>

    </LinearLayout>



