<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zzia.graduation.views.MyActionBar
        android:id="@+id/check_plan_layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height" />

    <ScrollView
        android:id="@+id/check_plan_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_plan_layout_actionbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/check_plan_layout_creater_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="提交人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_creater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/check_plan_layout_createtime"
                    android:layout_toRightOf="@+id/check_plan_layout_creater_txt"
                    android:text="sadfasd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="sdfs" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/check_plan_layout_checker_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="审核人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_checker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/check_plan_layout_checketime"
                    android:layout_toRightOf="@+id/check_plan_layout_checker_txt"
                    android:text="sdfsa"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_checketime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="sdfs" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_twelve"
                    android:text="5月工作计划"
                    android:textSize="@dimen/text_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />

                <TextView
                    android:id="@+id/check_plan_layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_twelve"
                    android:gravity="top"
                    android:maxLines="25"
                    android:minLines="15"
                    android:text="实现前端全部界面和功能\n\n搭建后台服务端\n\n连通后台进行数据填充"
                    android:textSize="@dimen/text_middle" />
            </LinearLayout>

            <TextView
                android:id="@+id/check_plan_layout_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:drawableLeft="@mipmap/extra"
                android:drawablePadding="@dimen/space_twelve"
                android:gravity="center"
                android:text="附件：（图片）" />

            <GridView
                android:id="@+id/check_plan_layout_grid"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:horizontalSpacing="20dp"
                android:numColumns="4"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="16dp"
                android:verticalSpacing="20dp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/check_plan_layout_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:entries="@array/checkStates" />

            <EditText
                android:id="@+id/check_plan_layout_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_twelve"
                android:background="@color/white"
                android:gravity="top"
                android:hint="审核评价~"
                android:maxLines="5"
                android:minLines="5"
                android:textSize="@dimen/text_middle" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>