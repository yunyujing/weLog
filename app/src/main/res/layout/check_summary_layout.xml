<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zzia.graduation.views.MyActionBar
        android:id="@+id/check_summary_layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:titleName="工作总结" />

    <ScrollView
        android:id="@+id/check_summary_layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_summary_layout_actionbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/check_summary_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_ten"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:layout_marginTop="@dimen/space_ten"
                android:background="@color/white"
                android:gravity="center"
                android:hint="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/check_aummary_layout_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:background="@color/white"
                android:gravity="top"
                android:hint="  内容——"
                android:maxLines="25"
                android:minLines="15"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/check_summary_layout_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_twelve"
                android:drawableLeft="@mipmap/extra"
                android:drawablePadding="@dimen/space_twelve"
                android:gravity="center"
                android:text="附件:(图片)" />

            <GridView
                android:id="@+id/check_summary_layout_grid"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:horizontalSpacing="20dp"
                android:numColumns="4"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="16dp"
                android:verticalSpacing="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/check_summary_layout_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_twelve"
                android:background="@color/white"
                android:gravity="top"
                android:hint="审核结果"
                android:maxLines="5"
                android:minLines="5"
                android:textSize="@dimen/text_middle" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>