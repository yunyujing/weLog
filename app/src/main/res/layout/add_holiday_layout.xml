<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zzia.graduation.views.MyActionBar
        android:id="@+id/add_holiday_layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:titleName="休假申请" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_twelve"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="请假表"
                android:layout_marginBottom="@dimen/space_twelve"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="审核人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_middle" />


                <Spinner
                    android:id="@+id/add_holiday_layout_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起始时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_holiday_layout_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_twelve"
                        android:layout_marginRight="@dimen/space_twelve"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/iconfont_xiujia"
                        android:drawablePadding="@dimen/space_twelve"
                        android:hint="请选择起始日期"
                        android:padding="@dimen/space_five"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:id="@+id/add_holiday_layout_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_twelve"
                        android:layout_marginRight="@dimen/space_twelve"
                        android:layout_marginTop="@dimen/space_five"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/task_time"
                        android:drawablePadding="@dimen/space_twelve"
                        android:hint="请选择起始时间"
                        android:padding="@dimen/space_five"
                        android:textSize="@dimen/text_big" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="终止时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_holiday_layout_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_twelve"
                        android:layout_marginRight="@dimen/space_twelve"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/iconfont_xiujia"
                        android:drawablePadding="@dimen/space_twelve"
                        android:hint="请选择终止日期"
                        android:padding="@dimen/space_five"
                        android:textSize="@dimen/text_big" />

                    <TextView
                        android:id="@+id/add_holiday_layout_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_twelve"
                        android:layout_marginRight="@dimen/space_twelve"
                        android:layout_marginTop="@dimen/space_five"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/task_time"
                        android:drawablePadding="@dimen/space_twelve"
                        android:hint="请选择终止时间"
                        android:padding="@dimen/space_five"
                        android:textSize="@dimen/text_big" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_twelve"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假原因" />

                <EditText
                    android:id="@+id/add_holiday_layout_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_twelve"
                    android:layout_marginRight="@dimen/space_twelve"
                    android:background="@drawable/btn_grey_normal"
                    android:enabled="true"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="5"
                    android:scrollbars="none" />
            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/space_twelve"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="审批状态" />-->

            <!--<TextView-->
            <!--android:id="@+id/add_holiday_layout_state"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/space_twelve"-->
            <!--android:text="待审批"-->
            <!--android:textColor="@color/titlebar_background"-->
            <!--android:textSize="@dimen/text_big" />-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
