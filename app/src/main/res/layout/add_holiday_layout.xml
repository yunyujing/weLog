<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zzia.graduation.views.MyActionBar
        android:id="@+id/edit_add_holiday_layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:titleName="休假申请" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_twelve"
        android:text="请假表"
        android:textColor="@color/black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/edit_add_holiday_layout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/space_twelve"
        android:text="2016-05-05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人" />

        <EditText
            android:id="@+id/edit_add_holiday_layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_twelve"
            android:layout_marginRight="@dimen/space_twelve" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_twelve"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始时间" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_add_holiday_layout_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:background="@color/white"
                android:drawableLeft="@mipmap/iconfont_xiujia"
                android:drawablePadding="@dimen/space_twelve"
                android:hint="请选择起始日期"
                android:padding="@dimen/space_five"
                android:textSize="@dimen/text_big" />

            <TextView
                android:layout_marginTop="@dimen/space_five"
                android:id="@+id/edit_add_holiday_layout_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:background="@color/white"
                android:drawableLeft="@mipmap/task_time"
                android:drawablePadding="@dimen/space_twelve"
                android:hint="请选择起始时间"
                android:padding="@dimen/space_five"
                android:textSize="@dimen/text_big" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_twelve"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终止时间" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_add_holiday_layout_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:background="@color/white"
                android:drawableLeft="@mipmap/iconfont_xiujia"
                android:drawablePadding="@dimen/space_twelve"
                android:hint="请选择终止日期"
                android:padding="@dimen/space_five"
                android:textSize="@dimen/text_big" />

            <TextView
                android:id="@+id/edit_add_holiday_layout_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_five"
                android:layout_marginLeft="@dimen/space_twelve"
                android:layout_marginRight="@dimen/space_twelve"
                android:background="@color/white"
                android:drawableLeft="@mipmap/task_time"
                android:drawablePadding="@dimen/space_twelve"
                android:hint="请选择终止时间"
                android:padding="@dimen/space_five"
                android:textSize="@dimen/text_big" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_twelve"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假理由" />

        <EditText
            android:id="@+id/edit_add_holiday_layout_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_twelve"
            android:layout_marginRight="@dimen/space_twelve"
            android:gravity="top"
            android:enabled="true"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:maxLines="5"
            android:scrollbars="none"
            android:background="@drawable/btn_grey_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批人" />

        <EditText
            android:id="@+id/edit_add_holiday_layout_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_twelve"
            android:layout_marginRight="@dimen/space_twelve" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_twelve"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批状态" />

        <TextView
            android:id="@+id/edit_add_holiday_layout_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_twelve"
            android:text="待审批"
            android:textColor="@color/titlebar_background"
            android:textSize="@dimen/text_big" />
    </LinearLayout>


</LinearLayout>
