<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/task_layout_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_layout_alltask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_forty_six"
                android:gravity="center"
                android:text="全部任务"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/task_layout_alltask_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_two"
                android:background="@color/colorPrimary" />
        </LinearLayout>


        <TextView
            android:layout_width="@dimen/space_two"
            android:layout_height="@dimen/space_forty"
            android:layout_gravity="center"
            android:background="@color/light_text_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_layout_minetask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的任务"
                android:textColor="@color/dark_text_gray"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/task_layout_minetask_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_two"
                android:background="@color/light_text_gray" />
        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/task_layout_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></android.support.v4.view.ViewPager>

</LinearLayout>